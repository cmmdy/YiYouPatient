<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#24d7d7d7"
    tools:context="com.zwt.yiyoupatient.activity.SignFirstActivity">

    <include
        android:id="@+id/include8"
        layout="@layout/toolbar_back" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/include8"
        android:background="#fff"
        android:layout_marginTop="30dp">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="25sp"
        android:hint="请输入注册手机号"
        android:textSize="20sp"
        android:textColorHint="#88808080"
        android:background="#fff"
        android:id="@+id/editText2" />
    </LinearLayout>
    <Button
        android:id="@+id/sign_button"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ll"
        android:background="@drawable/sign_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:text="注册"
        android:textColor="#fff"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textColor="#06bae0"
        android:textSize="15sp"
        android:text="注册即视为同意XXX服务协议" />


</RelativeLayout>
