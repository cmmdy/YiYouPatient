<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#24d7d7d7"
    tools:context="com.example.yiyoudoctor.activity.SignFirstActivity">

    <include
        android:id="@+id/include8"
        layout="@layout/toolbar_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/include8"
        android:id="@+id/linearLayout3"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >

        <EditText
            android:id="@+id/editText2"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="50dp"
            android:background="#fff"
            android:hint="     请输入验证码"
            android:textColorHint="#88808080"
            android:textSize="20sp" />

        <Button
            android:id="@+id/prove_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="#06bae0"
            android:layout_weight="1.5"
            android:text="获取验证码"
            android:textColor="#fff"
            android:textSize="18sp"/>
    </LinearLayout>


    <Button
        android:id="@+id/sign2_button"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="89dp"
        android:background="@drawable/sign_button"
        android:text="确定"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
