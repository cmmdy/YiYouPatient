<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zwt.yiyoupatient.activity.OrderOnline2Activity">

    <include
        android:id="@+id/include4"
        layout="@layout/toolbar_back" />

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/headimage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/headimage"
        android:id="@+id/relativeLayout">

        <ImageView
            android:id="@+id/imageleft"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/imageleft"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/imageleft"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctor"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/imageleft"
            android:text="TextView"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:background="#d6d6d6"
        android:layout_below="@+id/relativeLayout"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/phonell"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:gravity="center"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true">


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            android:layout_weight="3"
            android:src="@drawable/phone" />

        <TextView
            android:id="@+id/messagephone_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="40"
            android:text="88888888"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="3"
            android:src="@drawable/to" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/phonell"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:background="#d6d6d6"
        android:orientation="horizontal" />


    <LinearLayout
        android:id="@+id/addressll"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/divider2"
        android:gravity="center">


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            android:layout_weight="3"
            android:src="@drawable/address" />

        <TextView
            android:id="@+id/adress_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="40"
            android:text="下沙街道"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="3"
            android:src="@drawable/to" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/addressll"
        android:background="#45d6d6d6"
        android:orientation="horizontal" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_marginStart="9dp"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/first"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/messagedoctor_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="王医师"
        android:textSize="16sp"
        android:layout_marginStart="25dp"
        android:layout_below="@+id/civ"
        />

    <LinearLayout
        android:id="@+id/divider3"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/messagedoctor_tv2"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:background="#d6d6d6"
        android:orientation="horizontal" />


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="预约门诊"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#fff"/>
</RelativeLayout>
