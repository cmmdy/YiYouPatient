<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_back" />

    <LinearLayout
        android:id="@+id/doctorll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="#b9d6d6d6">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="门诊信息"
            android:textSize="17sp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/doctorrl"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/doctorll">


        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image1"
            android:layout_marginBottom="9dp"
            android:layout_toEndOf="@+id/image1"
            android:text="评分：5.0" />

        <TextView
            android:id="@+id/doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/image1"
            android:text="年龄20"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:layout_marginStart="9dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/viewpager1" />

        <TextView
            android:id="@+id/doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image1"
            android:layout_toEndOf="@+id/image1"
            android:text="中医世家"
            android:textSize="18sp" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/messagell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doctorrl"
        android:background="#b9d6d6d6">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="患者信息"
            android:textSize="17sp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/messagell">


        <TextView
            android:id="@+id/sex_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image2"
            android:layout_marginBottom="9dp"
            android:layout_toEndOf="@+id/image2"
            android:text="性别男" />

        <TextView
            android:id="@+id/age_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/image2"
            android:text="年龄20"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:layout_marginStart="9dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/viewpager1" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image2"
            android:layout_toEndOf="@+id/image2"
            android:text="卢患者"
            android:textSize="18sp" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/situationll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b9d6d6d6"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请输入患病情况"
            android:textSize="17sp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>


    <EditText
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/situationll"
        android:layout_margin="5dp"
        android:background="@null"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/buttonTop"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView"
        android:background="#a9a3a3a3" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#b9d6d6d6"
        android:text="选择预约时间"
        android:textSize="18sp"
        android:textColor="#c3000000"
        android:layout_below="@+id/buttonTop"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/buttonBottom"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/button"
        android:background="#a9a3a3a3" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="确定"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#fff"/>

</RelativeLayout>
