<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zwt.yiyoupatient.activity.Eat2Activity">

    <include layout="@layout/toolbar_back"
        android:id="@+id/include11" />

    <LinearLayout
        android:layout_below="@+id/include11"
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#45d6d6d6"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/timell"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/first"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"
            android:text="时间"
            android:textSize="25sp"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@id/time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="18:00"
            android:textSize="25sp"
            android:gravity="center_vertical"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/timell"
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#45d6d6d6"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/remarksll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/second"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"
            android:text="备注"
            android:textSize="25sp"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/remarks"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="吃药啦"
            android:textSize="25sp"
            android:gravity="center_vertical"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/remarksll"
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#45d6d6d6"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="9dp"
        android:text="保存"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_marginEnd="8dp"/>
</RelativeLayout>
